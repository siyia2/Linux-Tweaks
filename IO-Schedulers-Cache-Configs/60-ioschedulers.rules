# set scheduler for NVMe
ACTION=="add|change", KERNEL=="nvme[0-9]*", ATTR{queue/scheduler}="none"
# set scheduler for removable media-drivesto none for max throughput, be careful as removable media are considered all media that are not mounted automatically at /etc/fstab
ACTION=="add|change", KERNEL=="sd[a-z]",ATTR{removable}=="1", ATTR{queue/scheduler}="none"
# set scheduler for SSD and eMMC to bfq for lowest possible latency
ACTION=="add|change", KERNEL=="sd[a-z]|mmcblk[0-9]*", ATTR{queue/rotational}=="0", ATTR{queue/scheduler}="bfq"
# set scheduler for internal rotating disks to bfq for lowest possible latency
ACTION=="add|change", KERNEL=="sd[a-z]", ATTR{queue/rotational}=="0",ATTR{removable}=="0", ATTR{queue/scheduler}="bfq"
