# set scheduler for NVMe
ACTION=="add|change", KERNEL=="nvme[0-9]*", ATTR{queue/scheduler}="none"
# set scheduler for removable media-drives to none for max throughput, be careful as removable media are considered all media that are not mounted automatically at /etc/fstab
ACTION=="add|change", KERNEL=="sd[a-z]",ATTR{removable}=="1", ATTR{queue/scheduler}="none"
# set scheduler for SSD and eMMC to mq-deadline for a good balance between latency/throughput
ACTION=="add|change", KERNEL=="sd[a-z]|mmcblk[0-9]*", ATTR{queue/rotational}=="0", ATTR{queue/scheduler}="mq-deadline"
# set scheduler for internal rotating disks to bfq to achieve lowest possible latency
ACTION=="add|change", KERNEL=="sd[a-z]", ATTR{queue/rotational}=="0",ATTR{removable}=="0", ATTR{queue/scheduler}="bfq"

