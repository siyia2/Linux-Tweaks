# set scheduler for NVMe
ACTION=="add|change", KERNEL=="nvme*n*", SUBSYSTEM=="block", ENV{DEVTYPE}=="disk", ATTR{queue/scheduler}="none"
# set scheduler for removable media-drives to none for max throughput
ACTION=="add|change", KERNEL=="sd*", ATTR{removable}=="1", ATTR{queue/scheduler}="none"
# set scheduler for SSD
ACTION=="add|change", KERNEL=="sd*", SUBSYSTEM=="block", ATTR{queue/rotational}=="0", ATTR{queue/scheduler}="mq-deadline"
# set scheduler for internal rotating disks to bfq for lowest possible latency
ACTION=="add|change", KERNEL=="sd*", SUBSYSTEM=="block", ATTR{queue/rotational}=="1", ATTR{queue/scheduler}="bfq"
