[Unit]
Description=Restart Waybar after resume
After=kill_waybar.service systemd-logind.service

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'sleep 2; for user in $(loginctl list-users --no-legend | awk "{print \\$2}"); do for i in {1..5}; do systemd-run --machine=$user@.host --user --collect --wait /bin/bash -c "waybar" && break || sleep 1; done; done'

[Install]
WantedBy=suspend.target hibernate.target hybrid-sleep.target suspend-then-hibernate.target
